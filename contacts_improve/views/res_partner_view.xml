<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_partner_add_pricelist_form" model="ir.ui.view">
            <field name="name">res.partner.add.pricelist.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_product_pricelist']" position="after">
                    <field name="additional_pricelist" groups="product.group_product_pricelist"/>
                </xpath>
            </field>
        </record>
</odoo>