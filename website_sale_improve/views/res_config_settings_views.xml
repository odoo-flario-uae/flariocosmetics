<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form_inherit_telegram" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.telegram</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='autocomplete_googleplaces_setting']/div[hasclass('o_setting_right_pane')]" position="after">
                <div>
                    <div class="content-group row mt16">
                        <label class="col-4" for="telegram_token" string="Telegram token"/>
                        <field class="col-6" name="telegram_token"/>
                    </div>
                </div>
                <div>
                    <div class="content-group row mt16">
                        <label class="col-4" for="telegram_chat_id" string="Chat ID"/>
                        <field class="col-6" name="telegram_chat_id"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
