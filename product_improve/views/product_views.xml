<odoo>

    <!-- description_sale add fields after -->
    <record id="view_product_tree_inherit" model="ir.ui.view">
        <field name="name">product.stock.tree.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <!--    Могилевец 23.11.2022-->
            <xpath expr="//field[@name='lst_price']" position="after">
                <field name='currency_id' invisible="1"/>
                <field name="pricelist_price"  widget="monetary" options="{'currency_field': 'currency_id'}" decoration-warning="pricelist_price == 0" optional="show"/>
            </xpath>
            <!--    Могилевец 23.11.2022-->
        </field>
    </record>

    <record id="view_product_template_tree_inherit" model="ir.ui.view">
        <field name="name">product.template.stock.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <!--    Могилевец 23.11.2022-->
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="pricelist_price"  widget="monetary" options="{'currency_field': 'currency_id'}" decoration-warning="pricelist_price == 0" optional="show"/>
                <field name="directions"/>
                <field name="ingredients"/>
            </xpath>
            <!--    Могилевец 23.11.2022-->
        </field>
    </record>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!--  Андросов 30.11.2022 -->
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="extra_directions"/>
                <field name="extra_ingredients"/>
            </xpath>
            <!-- Андросов 30.11.2022 -->
        </field>
    </record>
</odoo>