<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_user_discount" model="ir.ui.view">
        <field name="name">res.users.discount.form</field>
        <field name="model">res.users</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="New user">
                    <group>
                        <field name="is_new_user"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="first_discount_configuration" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.first.order.discount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_product_catalog_settings']" position="after">
                <h2>First order Discount</h2>
                <div class="row mt16 o_settings_container" id="first_order_discount_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="discount_percentage"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <span><field name="discount_percentage" class="oe_inline"/> %</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="notify_popup_custom"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="notify_popup_custom" string="Use default popup"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="custom_message" string="Custom popup message"/>
                            <field name="custom_message" widget="html"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <form class="o_setting_right_pane">

                            <button type="submit">Confirm</button>
                        </form>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
