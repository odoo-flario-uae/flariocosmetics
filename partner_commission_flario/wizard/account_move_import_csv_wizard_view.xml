<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
    <record id="dialog_box_wizard_view" model="ir.ui.view">
        <field name="name">Dialog box</field>
        <field name="model">account.move.import.csv.wizard</field>
        <field name="arch" type="xml">
            <form string="Message">
                <field name="message"  nolabel="1" readonly="1" widget="html"/>
                <footer>
                    <button string="OK" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="account_move_import_csv_wizard_view_form" model="ir.ui.view">
        <field name="name">account.move.import.csv.wizard.form</field>
        <field name="model">account.move.import.csv.wizard</field>
        <field name="arch" type="xml">
            <form string="Import CSV">
                <group>
                    <field name="file" options="{'accepted_file_extensions': '.csv'}" placeholder="Upload CSV File"/>
                </group>
                <footer>
                    <button string="Send" name="action_import_csv" type="object" class="btn-primary" data-hotkey="q" confirm="Are you sure you want to upload amazon report?"/>
                    <button string="Cancel" class="btn-default" special="cancel" data-hotkey="z" />
                </footer>
			</form>
        </field>
    </record>

    <record id="action_invoice_order_import_csv" model="ir.actions.act_window">
        <field name="name">Import CSV (Amazon)</field>
        <field name="res_model">account.move.import.csv.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_move_import_csv_wizard_view_form"/>
<!--        <field name="domain">[('active_id.state', '!=', 'draft')]</field>-->
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">form</field>
    </record>

	</data>
</odoo>